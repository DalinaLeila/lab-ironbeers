<div class="card">
  <img class="beer-img" src="{{this.image_url}}" alt="beer-photo">
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <h4 class="card-tagline">{{this.tagline}}</h4>
    <p class="card-text"> {{this.description}}</p>

    <h4>Food Pairing</h4>
    <ul>
      {{#each this.food_pairing}}
      <li>{{this}}</li>
      {{/each}}
    </ul>

    <h4>Brewers Tips</h4>
    <p>{{this.brewers_tips}}</p>
  </div>
</div>